// skeleton
body
	min-height 100vh
	display flex
	flex-direction column
	background-color #edf6fd
.canvas
	min-height 100vh
	position relative
	display flex
	flex-direction column
	background-color #edf6fd
	transition transform .3s ease-out
	// &:before
	// 	content ""
	// 	position fixed
	// 	top 0
	// 	left 0
	// 	size 100%
	// 	background-color #fff
	// 	z-index 0
	&--slide
		transform translateX(250px)
.header
	position relative
	flex 0 0 auto
.main
	display block
	flex 1 0 auto
.footer
	position relative
	flex 0 0 auto

