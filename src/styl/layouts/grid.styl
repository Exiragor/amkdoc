.wrapper
	width 100%
.row
	width 100%
	max-width page-width + 40px
	margin-left auto
	margin-right auto
	display flex
	flex-flow row wrap
	[class^="col"]
		padding-left 20px
		padding-right 20px
		flex-shrink 0
		flex-grow 0
		@media mobile
			padding-left 15px
			padding-right 15px
		// & + [class^="col"]
		// 	@media mobile
		// 		padding-top 30px
	&--answer
		[class^="col"]
			@media mobile
				padding-left 0px
				padding-right 0px
	&--60
		max-width 1340 + 40px
		[class^="col"]
			padding-left 20px
			padding-right 20px
.row--70
	max-width 760px
	[class^="col"]
		padding-left 10px
		padding-right 10px

