.input-block
  width 360px
  display inline-block
  margin-right 60px
  &__text
    color #a4b3b7
    font-family Roboto
    font-size 14px
    font-weight 700
    line-height 16px
    margin-bottom 40px
  &__label
    color #525b6a
    font-family "Proxima Nova"
    font-size 14px
    font-weight 700
    line-height 24px
    margin-bottom 9px
  &__item
    size 360px 50px
    background-color white
    border 2px solid rgba(127, 142, 165, 0.5)
    color #525b6a
    font-family "Proxima Nova"
    font-size 16px
    font-weight 400
    line-height 24px
    margin-bottom 100px
    padding-left 20px
    &--hover
      border 2px solid #7f8ea5