input,
textarea,
select
	width 100%
	min-height 50px
	color #525b6a
	font-size 16px
	font-weight 400
	line-height 24px
	background-color #fff
	border 2px solid rgba(127, 142, 165, 0.5)
	border-radius 0
	margin-top 9px
	margin-bottom 20px
	padding-left 20px
	padding-right 20px
	transition: all 0.3s ease-out;
	&:hover
		border 2px solid #7f8ea5
	&:focus
		border 2px solid #7f8ea5

textarea
	min-height 110px
	resize none
	padding-top 15px
	padding-bottom 15px
	margin-bottom 30px
	@media mobile
		margin-bottom: 0px;