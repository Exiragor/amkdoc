.answer
	&__h1
		margin-bottom 30px
	&-wrapper
		min-height 88px
		width 100%
		border 2px solid #ebf4fb
		border-radius 25px
		// padding: 22px 30px 22px 40px;
		margin-bottom 10px
		transition all 0.3s ease-out
		@media mobile
			border none
			border-top 2px solid #ebf4fb
			border-radius 0px
			// padding 22px 15px
			margin-bottom: 0px;
		&:hover
			cursor pointer
			box-shadow 0 10px 30px rgba(127, 142, 165, 0.3)
			@media mobile
				box-shadow none
			& > .answer-question .answer-question__img
				.circle
					fill #6bd869
		&--last
			margin-bottom 30px
		&.active
			& > .answer-question .answer-question__img
				.circle
					fill #72afff
				.line
					display none
		& &
			margin-top 15px
			box-shadow none
			@media mobile
				border-top none
				padding-left 30px
				margin-top 0
	&-question
		width 100%
		color #7f8ea5
		padding 22px 30px 22px 40px
		display flex
		align-items center
		@media mobile
			padding-left 15px
			padding-right 15px
		&:hover
			color #6bd869
		.active > &
			color #72afff
		&__text
			height 100%
			color inherit
			display inline-block
			margin-left 20px
			margin-top 0
			margin-bottom 0
		&__img
			display inline-block
		&__hide-text
			display none
			padding-left 105px
			padding-right 30px
			margin-top -15px
			margin-bottom 22px
			@media mobile
				font-size 16px
				line-height 26px
				padding-left 15px
				padding-right 15px
				margin-top 0
			.active > &
				display block

.answer-row-mobile
	@media mobile
		padding 0