.service__h1
  max-width 99px

.service__item
  min-height: 220px;
  background-color: #fff;
  border: 2px solid #ebf4fb;
  border-radius: 25px;
  padding: 0 15px;
  margin: 30px 0;
  display: flex;
  justify-content: center;
  transition: all 0.3s ease-out;
  path
    transition all 0.3s ease-out
  @media mobile
    margin: 0;
    margin-top: 20px;
    
  &--hide
    display none
  &-include
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  &-include-text
    text-align: center;
    margin-top: 25px;
  &-include-img
    max-width: 81px;
    height: 81px;
    display: flex;
    align-items: flex-end;
  &:hover
    box-shadow 0 25px 30px rgba(127, 142, 165, 0.3)
    cursor pointer
    path
      fill #6bd869
    .link-text--service
      color #6bd869