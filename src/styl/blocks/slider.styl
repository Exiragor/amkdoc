.slick-slide
	outline none
	
.slick-next
	font-size 0
	position absolute
	size 64px 64px
	background url("../images/icon-arrow-left.svg") 50% no-repeat !important
	opacity 1
	top 50%
	right: 430px;
	border none
	cursor pointer
	// left 0
	z-index 100
	filter none !important
	@media only screen and (max-width: 1700px)
		right 330px
	@media only screen and (max-width: 1580px)
		right 230px
	@media only screen and (max-width: 1375px)
		right 130px
	@media only screen and (max-width: 1160px)
		right 80px
	@media only screen and (max-width: 1150px)
		right 60px
	// &:hover
		// background url("../images/arrow.svg") 50% no-repeat
	&:before
		content ""
		opacity 1
		position absolute
		right 0
.slick-slide img
	max-height 100%
	float left
	margin-right 10px
	// margin-right auto
.slider__container
	opacity 0
	transition opacity 0.3s ease-out
.slick-track .slider__container
	opacity 1
	transition opacity 0.3s ease-out
