.slick-dots
	width 100%
	display flex !important
	justify-content center
	// margin-top 20px
	// margin-bottom 30px
	li
		size 12px
		text-indent -9999px
		background-color #c7cfd9
		border-radius 50%
		cursor pointer
		margin-left 15px
		margin-bottom: 30px;
		float left
		display block
		@media mobile
			margin-bottom: 0px;
		&:first-child
			margin-left 0
		&.slick-active
			background-color #6bd869
.comment-slider .slick-dots
	margin-top 0


.slider-item
	opacity 0.1
	transition: opacity 0.3s;
	@media only screen and (max-width: 480px)
		opacity: 1;
		filter: none;
	&-wrap
		max-width: 740px;
		margin-left auto
		margin-right auto
		margin-bottom 30px
		text-align center
	&__text
		// min-height 215px
		color #525b6a
		font-family "Proxima Nova"
		font-size 16px
		font-weight 400
		line-height 26px
		@media mobile
			margin: 0 15px;
	&__name
		color #72afff
		font-family "Proxima Nova"
		font-size 18px
		font-weight 700
		line-height 20px
		margin-top 25px
	&__about
		color #7f8ea5
		font-family "Proxima Nova"
		font-size 13px
		font-weight 700
		// font-style italic
		line-height 24px
		margin-top 6px
		margin-bottom 9px
		

.slick-current
	opacity 1
	

.slick-prev
	font-size 0
	position absolute
	size 64px 64px
	background url("../images/icon-arrow-left.svg") 50% no-repeat !important
	transform-scale(scale(-1, 1))
	opacity 1
	top 50%
	left: 430px;
	border none
	cursor pointer
	// left 0
	z-index 100
	filter none !important
	@media only screen and (max-width: 1700px)
		left 330px
	@media only screen and (max-width: 1580px)
		left 230px
	@media only screen and (max-width: 1375px)
		left 130px
	@media only screen and (max-width: 1160px)
		left 80px
	@media only screen and (max-width: 1150px)
		left 60px
	// &:hover
		// background url("../images/arrow.svg") 50% no-repeat
	&:before
		content ""
		opacity 1
		position absolute
		right 0
		
.slick-arrow
	border-radius: 50px;
	transition: all 0.3s ease-out;
	&:hover
		box-shadow: 0 20px 30px rgba(127,142,165,0.5);