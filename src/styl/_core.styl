retina = "(-webkit-min-device-pixel-ratio: 1.3), (min-resolution: 124.8dpi)"
use('nesting-tree-traversal.js')

page-width = 1280px

mobile = "only screen and (max-width: 650px)"
not-mobile = "only screen and (min-width: 651px)"

border-link(color)
	color color
	// line-height 1.3
	text-decoration none
	border-bottom 2px solid color
	display inline-block
	
transform-scale(scale)
	-moz-transform scale
	-webkit-transform scale
	-o-transform scale
	transform scale